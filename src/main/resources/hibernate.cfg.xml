<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"></property>
        <!--<property name="hibernate.connection.password">M7d4a63</property>-->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/aerosky_ground</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>

        <property name="hibernate.
connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.max_size">100</property>
        <property name="hibernate.c3p0.timeout">0</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">0</property>
        <property name="hibernate.c3p0.validate">true</property>

        <mapping resource="com/back/office/flight.hbm.xml"></mapping>
        <mapping resource="com/back/office/sector.hbm.xml"></mapping>
        <mapping resource="com/back/office/kitCode.hbm.xml"></mapping>
        <mapping resource="com/back/office/equipmentType.hbm.xml"></mapping>
        <mapping resource="com/back/office/kitItem.hbm.xml"></mapping>
        <mapping resource="com/back/office/item.hbm.xml"></mapping>
        <mapping resource="com/back/office/voucher.hbm.xml"></mapping>
        <mapping resource="com/back/office/currency.hbm.xml"></mapping>
        <mapping resource="com/back/office/orderMainDetails.hbm.xml"></mapping>
        <mapping resource="com/back/office/paymentMethods.hbm.xml"></mapping>
        <mapping resource="com/back/office/itemSale.hbm.xml"></mapping>
        <mapping resource="com/back/office/creditCard.hbm.xml"></mapping>
        <mapping resource="com/back/office/posFlight.hbm.xml"></mapping>
        <mapping resource="com/back/office/sifDetails.hbm.xml"></mapping>
        <mapping resource="com/back/office/promotion.hbm.xml"></mapping>
        <mapping resource="com/back/office/user.hbm.xml"></mapping>
        <mapping resource="com/back/office/DepartureFlight.hbm.xml"></mapping>
        <mapping resource="com/back/office/paxDetails.hbm.xml"></mapping>
        <mapping resource="com/back/office/OrderNowItems.hbm.xml"></mapping>
        <mapping resource="com/back/office/OrderNow.hbm.xml"></mapping>
        <mapping resource="com/back/office/ArrivalFlight.hbm.xml"></mapping>
    </session-factory>
</hibernate-configuration>
